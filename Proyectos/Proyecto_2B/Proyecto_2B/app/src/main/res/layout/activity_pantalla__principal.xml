<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".pantalla_Principal">

    <TextView
        android:id="@+id/tv_titulo_PP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="EPN MUSIC PLAYER"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="206dp"
        android:layout_marginTop="72dp"
        android:background="#090909"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_PP">

        <TextView
            android:id="@+id/tv_todas_canciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_nota_musical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:text="Todas las Canciones"
            android:textColor="#AFAAAA"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lista_reproducción"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_lista_de_reproduccion"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:text="Listas de Reproducción"
            android:textColor="#AFAAAA"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lista_favoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_favorito2"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:text="Favoritos"
            android:textColor="#AFAAAA"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_artistas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_musica"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:text="Artistas"
            android:textColor="#AFAAAA"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>