<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    tools:context=".Opciones">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cancion1" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="MXRGXN, Sharif"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textView24"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Con Lo Puesto"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ScrollView
        android:layout_width="342dp"
        android:layout_height="353dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_favorito"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Me gusta"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_lista_de_reproduccion"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Agregar a playlist"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_boton_agregar_a_la_cola"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Agregar a la cola"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_album_de_musica"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Ver álbum"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_musica"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Ver artistas"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_compartir"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Compartir"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_luna"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Temporizador de apagdo automático"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_antena"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Ir a la radio de la canción"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#141217"
                android:drawableLeft="@drawable/ic_grupo"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="     Mostrar créditos"
                android:textAlignment="viewStart" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>