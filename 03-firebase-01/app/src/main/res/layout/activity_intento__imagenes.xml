<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intento_Imagenes">

    <Button
        android:id="@+id/btn_obtenerImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obtener Imagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/btn_tomarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Tomar Fotografia"
        app:layout_constraintEnd_toEndOf="@+id/btn_obtenerImagen"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/btn_obtenerImagen"
        app:layout_constraintTop_toBottomOf="@+id/btn_obtenerImagen" />

    <ImageView
        android:id="@+id/im_mostrarImagen"
        android:layout_width="357dp"
        android:layout_height="325dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_tomarFoto"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/btn_tomarFoto"
        app:layout_constraintTop_toBottomOf="@+id/btn_tomarFoto"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>