<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#100F0F"
        android:backgroundTint="#0E0D0D"
        android:text="HOLA PORTRAIT"
        android:textColor="@color/teal_200"
        android:textColorLink="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/button_ir_ciclo_vida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bnt_ir_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="LIST VIEW"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_ciclo_vida" />

    <Button
        android:id="@+id/btn_ir_intent_explicito_parametros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="I. EXP PARAM"
        app:layout_constraintEnd_toEndOf="@+id/bnt_ir_list_view"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/bnt_ir_list_view"
        app:layout_constraintTop_toBottomOf="@+id/bnt_ir_list_view" />

    <Button
        android:id="@+id/btn_ir_intent_con_respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="I. CON RESPUESTA"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_intent_explicito_parametros"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_intent_explicito_parametros"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_intent_explicito_parametros" />

    <Button
        android:id="@+id/btn_ir_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:text="R.VIEW"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_ciclo_vida" />

    <Button
        android:id="@+id/btn_ir_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:text="HTTP"
        app:layout_constraintEnd_toEndOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_ir_ciclo_vida"
        app:layout_constraintTop_toBottomOf="@+id/button_ir_ciclo_vida" />

</androidx.constraintlayout.widget.ConstraintLayout>